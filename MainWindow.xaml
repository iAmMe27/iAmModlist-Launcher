<Window x:Class="iAmModlist_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iAmModlist_Launcher"
        mc:Ignorable="d"
        Title="iAmModlist Launcher" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <ui:SimpleStackPanel Margin="12" Spacing="24">
            <TextBlock Text="iAmModlist Launcher" Style="{StaticResource HeaderTextBlockStyle}" />
            <Button Content="I am an accent button" Style="{StaticResource AccentButtonStyle}" />
            <Button Content="I am a button" Margin="77,32,0,0" VerticalAlignment="Top" />
        </ui:SimpleStackPanel>
    </Grid>
</Window>
