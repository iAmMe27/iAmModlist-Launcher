<Window x:Class="iAmModlist_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iAmModlist_Launcher"
        mc:Ignorable="d"
        Title="{Binding ModlistName}" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        ui:WindowHelper.UseModernWindowStyle="True"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Image Name="VanityImage" Source="{Binding BackgroundImage}"/>
        <ui:SimpleStackPanel Margin="12" Spacing="24">
            <TextBlock Text="{Binding ModlistName, FallbackValue=Placeholder, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HeaderTextBlockStyle}" Loaded="ModlistName_Loaded"/>
            <TextBlock Text="{Binding ModlistVersion, FallbackValue=Placeholder}" Margin="0, -20, 700, 0"/>
            <TextBlock Text="{Binding ModlistAuthor, FallbackValue=Placeholder}" Margin="150, -45, 0, 30"/>
            <Button Content="I am an accent button" Style="{StaticResource AccentButtonStyle}" Margin="10,83,0,0" VerticalAlignment="Top" />
            <Button Content="I am a button" Margin="10,-7,0,0" VerticalAlignment="Top" Width="153" />
        </ui:SimpleStackPanel>
    </Grid>
</Window>
